{
  "name": "react-content-placeholder",
  "description": "React implementation of content placer holder inspired by Facebook content placeholder deconstruction blog by George Phillips - http://cloudcannon.com/deconstructions/2014/11/15/facebook-content-placeholder-deconstruction.html",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "babel": "babel src --out-dir lib --ignore *.story.js --ignore Interactive.js",
    "build": "npm run babel && npm run sass",
    "clean": "rimraf ./lib",
    "prebuild": "npm run clean",
    "prepublish": "npm run build",
    "sass": "cpx -v \"./src/**/*.scss\" ./lib",
    "start": "npm run storybook",
    "storybook": "start-storybook -p 3333"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/third/react-content-placeholder.git"
  },
  "keywords": [
    "content",
    "placholder",
    "loading",
    "react",
    "components"
  ],
  "author": "Third Santor <tlsantor@gmail.com> (https://github.com/third)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/third/react-content-placeholder/issues"
  },
  "homepage": "https://github.com/third/react-content-placeholder#readme",
  "dependencies": {
    "classnames": "^2.2.5",
    "react": "^15.3.2",
    "react-dom": "^15.3.2"
  },
  "devDependencies": {
    "@kadira/storybook": "^2.20.1",
    "autoprefixer": "^6.5.0",
    "babel": "^6.5.2",
    "babel-core": "^6.16.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-1": "^6.16.0",
    "cpx": "^1.5.0",
    "cross-env": "^3.0.0",
    "css-loader": "^0.25.0",
    "node-sass": "^3.10.0",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.2"
  }
}
